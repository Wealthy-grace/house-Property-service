---
# ArgoCD Application for Property Service
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: property-service
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://github.com/Wealthy-grace/house-Property-service.git
    targetRevision: main
    path: Property-Service/k8s/property-service
  destination:
    server: https://kubernetes.default.svc
    namespace: student-housing
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
      allowEmpty: false
    syncOptions:
      - CreateNamespace=true
    retry:
      limit: 5
      backoff:
        duration: 5s
        factor: 2
        maxDuration: 3m
